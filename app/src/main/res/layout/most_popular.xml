<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/marvel"
    tools:context="org.esiea.merrouche_rauber.myapplication.ThirdActivity">

    <Button
        android:id="@+id/iron_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="289dp"
        android:layout_marginEnd="59dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="53dp"
        android:background="@drawable/bouton1"
        app:layout_constraintBottom_toTopOf="@+id/hulk_button"
        app:layout_constraintEnd_toStartOf="@+id/captain_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/captain_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="289dp"
        android:layout_marginEnd="63dp"
        android:layout_marginTop="53dp"
        android:background="@drawable/bouton2"
        app:layout_constraintBottom_toTopOf="@+id/thor_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iron_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/hulk_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="46dp"
        android:layout_marginEnd="59dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/bouton3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/thor_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iron_button" />

    <Button
        android:id="@+id/thor_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="46dp"
        android:layout_marginEnd="63dp"
        android:background="@drawable/bouton4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hulk_button"
        app:layout_constraintTop_toBottomOf="@+id/captain_button"
        tools:ignore="MissingConstraints" />
</android.support.constraint.ConstraintLayout>